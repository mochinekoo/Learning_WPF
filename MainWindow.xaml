<Window x:Class="Learning_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF" d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="ファイル">
                <MenuItem Header="新規作成" />
                <MenuItem Header="開く" />
                <MenuItem Header="保存" />
                <MenuItem Header="終了" />
            </MenuItem>
            <MenuItem Header="ヘルプ">
                <MenuItem Header="このアプリについて"/>
            </MenuItem>
        </Menu>

        <Button Content="ああ" Grid.Row="1" Grid.Column="0" Width="100" Height="100" FontFamily="Arial Black">
            
        </Button>

        <Slider HorizontalAlignment="Left" Margin="37,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Value="{Binding Slider}" Minimum="0" Maximum="100"/>

        <ScrollBar HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1">
        </ScrollBar>
        <TextBox HorizontalAlignment="Left" Margin="179,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding Slider}" VerticalAlignment="Top" Width="120"/>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="73,298,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Value="{Binding Progress}"/>

    </Grid>
</Window>
